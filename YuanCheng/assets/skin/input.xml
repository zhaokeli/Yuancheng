<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window size="320,450" sizebox="4,4,6,6" roundcorner="5,5" caption="0,0,0,32">
    <Style name="btn_default" value="normalimage=&quot;btn_default.png&quot; hotimage=&quot;btn_hover.png&quot; pushedimage=&quot;btn_down.png&quot;" />
    <VerticalLayout bkcolor="#FFFFFBF0" bordersize="1" bordercolor="#0057C0FF">
        <HorizontalLayout bordersize="1" height="40" bkcolor="#FFfdfdfd" bkcolor2="#00FFFFFF">
            <HorizontalLayout>
                <Label name="wintitle" padding="20,0,0,0" text="添加信息"  disabledtextcolor="#FFA7A6AA" showhtml="true" />
            </HorizontalLayout>
            <HorizontalLayout width="70">
                <Button name="btn_min" text="" tooltip="最小化" width="35" height="27" padding="0,0,0,0" textcolor="#00FFFBF0" disabledtextcolor="#FFA7A6AA" align="center"  normalimage="btn/min.png" hotimage="btn/min_hover.png" pushedimage="btn/min_hover.png" />
                <Button name="btn_close" text="" tooltip="关闭" width="35" height="27" padding="0,0,0,0" textcolor="#00FFFBF0" disabledtextcolor="#FFA7A6AA" align="center" normalimage="btn/close.png" hotimage="btn/close_hover.png" pushedimage="btn/close_hover.png" />
            </HorizontalLayout>
        </HorizontalLayout>
        <HorizontalLayout padding="5,5,5,5" inset="2,2,2,2" height="30">
            <Label align="right" valign="vcenter" text="IP:" width="60" />
            <Edit name="ip" tooltip="请输入ip地址" text="116.255.214.72" border="1" font="1" bkcolor="#FFFFFFFF" bordersize="1" bordercolor="#0057C0FF" textpadding="10,2,2,2" textcolor="#FFff0000" disabledtextcolor="#FFA7A6AA" />
        </HorizontalLayout>
        <HorizontalLayout padding="5,5,5,5" inset="2,2,2,2" height="30">
            <Label align="right" valign="vcenter" text="端口:" width="60" />
            <Edit name="port" tooltip="请输入端口默认为3389" text="21472" border="1" font="1" bkcolor="#FFFFFFFF" bordersize="1" width="80" bordercolor="#0057C0FF" textpadding="10,2,2,2" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" />
        </HorizontalLayout>
        <HorizontalLayout padding="5,5,5,5" inset="2,2,2,2" height="30">
            <Label align="right" valign="vcenter" text="用户名:" width="60" />
            <Edit name="username" tooltip="请输入用户名" text="Administrator" border="1" font="1" bkcolor="#FFFFFFFF" bordersize="1" bordercolor="#0057C0FF" textpadding="10,2,2,2" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" />
        </HorizontalLayout>
        <HorizontalLayout padding="5,5,5,5" inset="2,2,2,2" height="30">
            <Label align="right" valign="vcenter" text="密码:" width="60" />
            <Edit name="pwd" tooltip="请输入密码" text="" border="1" font="1" bkcolor="#FFFFFFFF" bordersize="1" bordercolor="#0057C0FF" textpadding="10,2,2,2" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" />
        </HorizontalLayout>
        <HorizontalLayout padding="5,5,5,5" inset="2,2,2,2" height="80">
            <Label align="right" valign="vcenter" text="备注:" width="60" />
            <RichEdit name="note" text="备注" inset="10,2,2,2" bordersize="1" bordercolor="#0057C0FF" />
        </HorizontalLayout>
        <HorizontalLayout padding="5,5,5,5" inset="20,2,2,10" height="50">
            <Button name="btn_ok" text="确定" tooltip="修改信息" width="90" padding="10,5,0,0" bordercolor="#00D2D2D2" textcolor="#FF000000" roundborder="5,5" disabledtextcolor="#FFA7A6AA" font="2" align="center" normalimage="btn_default.png" hotimage="btn_hover.png" pushedimage="btn_down.png" />
            <Button name="btn_cancel" text="取消" tooltip="取消" width="90" padding="10,5,0,0" bordercolor="#00D2D2D2" textcolor="#FF000000" roundborder="5,5" disabledtextcolor="#FFA7A6AA" font="2" align="center" normalimage="btn_default.png" hotimage="btn_hover.png" pushedimage="btn_down.png" />
        </HorizontalLayout>
    </VerticalLayout>
</Window>
