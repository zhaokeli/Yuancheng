<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window size="500,400" sizebox="4,4,6,6" roundcorner="4,4" caption="0,0,0,32">
    <Font name="宋体" size="13" bold="true" italic="false" />
    <Font name="宋体" size="12" bold="true" italic="false" />
    <Font name="宋体" size="12" bold="false" italic="false" />
    <Font name="宋体" size="14" bold="true" italic="false" />
    <Font name="宋体" size="22" bold="true" italic="true" />
